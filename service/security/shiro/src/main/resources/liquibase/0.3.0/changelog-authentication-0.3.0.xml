<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
  logicalFilePath="KapuaDB/changelog-authentication-0.3.0.xml">

    <changeSet id="changelog-authentication-0.3.0_addExpiration" author="eurotech">
        <!-- Old SQL file
        <sqlFile relativeToChangelogFile="true" path="./atht_credential-expiration.sql" />
        -->
        <addColumn tableName="atht_credential">
            <column name="expiration_date" type="timestamp(3)"/>
            <column name="credential_status" type="varchar(64)" defaultValue="ENABLED">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="changelog-authentication-0.3.0_addLockout" author="eurotech">
        <!-- Old SQL file
        <sqlFile relativeToChangelogFile="true" path="./atht_credential-lockout_policy.sql" />
        -->
        <addColumn tableName="atht_credential">
            <column name="login_failures" type="int unsigned" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="first_login_failure" type="timestamp(3)"/>
            <column name="login_failures_reset" type="timestamp(3)"/>
            <column name="lockout_reset" type="timestamp(3)"/>
        </addColumn>
    </changeSet>

    <include relativeToChangelogFile="true" file="./atht_access_token-id_check_positive.sql" />
    <include relativeToChangelogFile="true" file="./atht_credential-id_check_positive.sql" />
</databaseChangeLog>